<Page x:Class="Uno.Gallery.Views.Samples.FlipViewSamplePage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:local="using:Uno.Gallery"
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	  xmlns:smtx="using:ShowMeTheXAML"
	  mc:Ignorable="d">
	<Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
		<local:SamplePageLayout>

			<local:SamplePageLayout.FluentTemplate>
				<DataTemplate>
					<StackPanel>
						<smtx:XamlDisplay UniqueKey="FlipViewSamplePage_Fluent_Default"
										  smtx:XamlDisplayExtensions.Header="FlipView">

							<FlipView x:Name="flipView"
									  Height="600"
									  SelectedIndex="0">
								<FlipViewItem>
									<Grid Background="{StaticResource UnoBlueColorBrush}">
										<StackPanel VerticalAlignment="Center" Spacing="16">

											<TextBlock Text="Item 1"
													   Style="{StaticResource HeaderTextBlockStyle}"
													   Foreground="White"
													   FontWeight="Bold"
													   HorizontalAlignment="Center" />
											<StackPanel Spacing="8" HorizontalAlignment="Center" Orientation="Horizontal">
												<FontIcon Foreground="White" Glyph="&#xE72B;" Opacity="0.3" />
												<TextBlock Text="Swipe"
														   Style="{StaticResource HeadlineMedium}"
														   Foreground="White"
														   HorizontalAlignment="Center" />
												<FontIcon Foreground="White" Glyph="&#xE72A;" Opacity="1" />
											</StackPanel>
										</StackPanel>
									</Grid>
								</FlipViewItem>

								<FlipViewItem>
									<Grid Background="{StaticResource UnoPurpleColorBrush}">
										<StackPanel VerticalAlignment="Center" Spacing="16">

											<TextBlock Text="Item 2"
													   Style="{StaticResource HeaderTextBlockStyle}"
													   Foreground="White"
													   FontWeight="Bold"
													   HorizontalAlignment="Center" />

											<StackPanel Spacing="8" HorizontalAlignment="Center" Orientation="Horizontal">
												<FontIcon Foreground="White" Glyph="&#xE72B;" Opacity="1" />
												<TextBlock Text="Swipe"
														   Style="{StaticResource HeadlineMedium}"
														   Foreground="White"
														   HorizontalAlignment="Center" />
												<FontIcon Foreground="White" Glyph="&#xE72A;" Opacity="1" />
											</StackPanel>
										</StackPanel>
									</Grid>
								</FlipViewItem>

								<FlipViewItem>
									<Grid Background="{StaticResource UnoGreenColorBrush}">
										<StackPanel VerticalAlignment="Center" Spacing="16">

											<TextBlock Text="Item 3"
													   Style="{StaticResource HeaderTextBlockStyle}"
													   Foreground="White"
													   FontWeight="Bold"
													   HorizontalAlignment="Center" />
											
											<StackPanel Spacing="8" HorizontalAlignment="Center" Orientation="Horizontal">
												<FontIcon Foreground="White" Glyph="&#xE72B;" Opacity="1" />
												<TextBlock Text="Swipe"
														   Style="{StaticResource HeadlineMedium}"
														   Foreground="White"
														   HorizontalAlignment="Center" />
												<FontIcon Foreground="White" Glyph="&#xE72A;" Opacity="1" />
											</StackPanel>
										</StackPanel>
									</Grid>
								</FlipViewItem>

								<FlipViewItem>
									<Grid Background="{StaticResource UnoRedColorBrush}">
										<StackPanel VerticalAlignment="Center" Spacing="16">

											<TextBlock Text="Item 4"
													   Style="{StaticResource HeaderTextBlockStyle}"
													   Foreground="White"
													   FontWeight="Bold"
													   HorizontalAlignment="Center" />

											<StackPanel Spacing="8" HorizontalAlignment="Center" Orientation="Horizontal">
												<FontIcon Foreground="White" Glyph="&#xE72B;" Opacity="1" />
												<TextBlock Text="Swipe"
														   Style="{StaticResource HeadlineMedium}"
														   Foreground="White"
														   HorizontalAlignment="Center" />
												<FontIcon Foreground="White" Glyph="&#xE72A;" Opacity="0.3" />
											</StackPanel>
										</StackPanel>
									</Grid>
								</FlipViewItem>
							</FlipView>
						</smtx:XamlDisplay>
					</StackPanel>
				</DataTemplate>
			</local:SamplePageLayout.FluentTemplate>
		</local:SamplePageLayout>
	</Grid>
</Page>
